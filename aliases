# directory listing
alias ll='ls -lFhG'
alias la='ll -a'
alias l='ll'

# directory changing
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"
alias cd..='cd ..'
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias src="cd ~/src"

# misc
alias x='exit'
alias sudo='sudo '
alias mv='mv -iv'
alias grep='grep -s --color=auto --exclude-dir=\.svn --exclude-dir=\.git'
alias rsyncdefault="rsync --verbose  --progress --stats --compress --recursive --times --perms --links --delete --exclude \"\.git\""
alias realpath="python -c 'import os,sys;print os.path.realpath(sys.argv[1])'"
alias pws="python -m SimpleHTTPServer"
alias timestamp='date +%s'

# git
alias gf="git fetch -p"
alias gcd="git checkout develop"
alias gpud="git pull upstream develop"
alias gcpud="gcd && gpud"
#eval "$(hub alias -s)"

# devex
alias dvx="cd ~/Work/projects/devex/devex"
alias gpdd="git pull devex develop"
alias gcpdd="gcd && git pull devex develop"
alias gcpd="gcpdd"

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

### Linux

alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
